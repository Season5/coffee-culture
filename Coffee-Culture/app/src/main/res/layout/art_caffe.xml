<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >


    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/carddemo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp">

        <!--<TextView-->
            <!--android:id="@+id/card_main_inner_simple_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Large Text"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/coffee"
            android:scaleType="fitXY" />
    </it.gmariotti.cardslib.library.view.CardViewNative>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ttle"
        android:id="@+id/textView12"
        android:textAlignment="center"
        android:textColor="#780606"
        android:elevation="20sp"
        android:layout_below="@+id/carddemo"
        android:layout_centerHorizontal="true" />


    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/carddemo1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:textAlignment="center"
        android:layout_alignStart="30dp"
        android:layout_toEndOf="30dp">

        <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#780606"
            android:textAlignment="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/content"
            android:id="@+id/textView14"
            android:layout_alignTop="@+id/carddemo1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp" />

    </it.gmariotti.cardslib.library.view.CardViewNative>

    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/carddemo2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:textAlignment="center"
        android:layout_alignStart="30dp"
        android:layout_toEndOf="30dp">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#780606"
            android:textAlignment="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/content"
            android:id="@+id/textView16"
            android:layout_alignTop="@+id/carddemo1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp" />

    </it.gmariotti.cardslib.library.view.CardViewNative>




</RelativeLayout>
